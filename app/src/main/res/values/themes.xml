<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Week4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/princess</item>
        <item name="colorPrimaryVariant">@color/princess</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/princess</item>
        <item name="colorSecondaryVariant">@color/princess</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/princess</item>
        <!-- Customize your theme here. -->
    </style>

    // set up style for rounded corner widget
    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="colorControlActivated">@color/princess</item>
    </style>

    // style for header
    <style name="CalendarHeaderStyle">
        <item name="android:background">@drawable/calendar_header_bg</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/pink_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>